<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Logar">

    <ImageView
        android:id="@+id/myImage"
        android:layout_width="220dp"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="110dp"
        android:src="@drawable/logomeumenu">

    </ImageView>

    <TextView
        android:id="@+id/textWelcome"
        android:layout_width="300dp"
        android:layout_marginTop="60dp"
        android:layout_below="@id/myImage"
        android:textColor="@color/black"
        android:text="Bem vindo(a)! insira seu email e senha"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:gravity="start|center_horizontal">

    </TextView>

    <EditText
        android:id="@+id/editTextEmail"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_below="@id/textWelcome"
        android:background="@drawable/inputborders"
        android:layout_marginTop="40dp"
        android:paddingStart="10dp"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/black"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:textColor="@color/black"
        android:textColorHint="@android:color/darker_gray"
        tools:ignore="RtlSymmetry" />

    <EditText
        android:id="@+id/editTextPassword"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_below="@id/editTextEmail"
        android:layout_marginTop="20dp"
        android:paddingStart="10dp"
        android:background="@drawable/inputborders"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/black"
        android:hint="Senha"
        android:inputType="textPassword"
        android:textColor="@color/black"
        android:textColorHint="@android:color/darker_gray"
        tools:ignore="RtlSymmetry" />


    <Button
        android:layout_marginTop="70dp"
        android:id="@+id/buttonEntrar"
        android:layout_width="300dp"
        android:layout_below="@id/editTextPassword"
        android:backgroundTint="#712323"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:text="Entrar"/>

    <Button
        android:id="@+id/buttonLogin"
        android:layout_width="300dp"
        android:backgroundTint="#3A3235"
        android:layout_below="@id/buttonEntrar"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:text="Criar Conta"/>


</RelativeLayout>