<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:backgroundTint="@color/cor_fundo_padrao"
    android:orientation="vertical"
    tools:context=".ConfirmaEmail">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="80dp">

        <!--Início Divisão seta X 'Cadastro'-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="40dp"
                android:layout_marginLeft="8dp"
                android:src="@drawable/seta_preta_voltar"
                android:id="@+id/btnVltContato"
                android:layout_height="match_parent">
            </ImageView>

            <TextView
                android:layout_width="match_parent"
                android:layout_toEndOf="@id/btnVltContato"
                android:text="Contato"
                android:textSize="30dp"
                android:textColor="@color/black"
                android:textFontWeight="500"
                android:layout_marginLeft="10dp"
                android:fontFamily="sans-serif"
                android:gravity="center_vertical"
                android:layout_height="match_parent">
            </TextView>

        </RelativeLayout>
        <!--Fim Divisão seta X 'Cadastro'-->
    </LinearLayout>
    <!--Fim header 'Cadastro'-->

    <RelativeLayout
        android:layout_width="385dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="230dp"
            android:id="@+id/id_txt_sms_contato4"
            android:text="Insira o código enviado por e-mail:"
            android:textSize="22dp"

            android:textColor="@color/black"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content">
        </TextView>

        <TextView
            android:layout_width="230dp"
            android:id="@+id/id_sobre_sms_contato4"
            android:layout_below="@id/id_txt_sms_contato4"
            android:layout_marginTop="20dp"
            android:text="Foi enviado um código para validar o novo e-mail."
            android:textFontWeight="500"
            android:textColor="@color/black"
            android:textSize="14dp"
            android:layout_height="wrap_content">
        </TextView>

        <EditText
            android:layout_width="match_parent"
            android:id="@+id/id_input_codigo_contato4"
            android:layout_below="@id/id_sobre_sms_contato4"
            android:hint="Código"
            android:paddingLeft="10dp"
            android:layout_marginTop="35dp"
            android:textAlignment="textStart"
            android:background="@drawable/edit_text_border"
            android:layout_height="50dp">
        </EditText>

        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/id_txt_reenviar_contato4"
            android:text="Não recebeu um código?"
            android:layout_marginTop="10dp"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:layout_below="@id/id_input_codigo_contato4"
            android:layout_height="wrap_content">
        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/id_txt_reenviar2_contato4"
            android:textSize="16dp"
            android:text="Reenviar código"
            android:textColor="@color/purple_700"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_below="@+id/id_input_codigo_contato4"
            android:layout_toRightOf="@id/id_txt_reenviar_contato4"
            android:layout_height="wrap_content"/>

        <!--        <EditText-->
        <!--                android:layout_width="match_parent"-->
        <!--                android:id="@+id/id_input_senha_confirmada"-->
        <!--                android:layout_below="@id/id_input_senha"-->
        <!--                android:text="Confirmar nova senha"-->
        <!--                android:paddingLeft="10dp"-->
        <!--                android:layout_marginTop="25dp"-->
        <!--                android:textAlignment="textStart"-->
        <!--                android:background="@drawable/edit_text_border"-->
        <!--                android:layout_height="50dp">-->
        <!--        </EditText>-->

        <Button
            android:layout_width="150dp"
            android:id="@+id/bt_continuar"
            android:text="Continuar"
            android:fontFamily="sans-serif"
            android:layout_marginTop="30dp"
            android:backgroundTint="#8D0000"
            android:background="@drawable/custom_button_background"
            android:layout_below="@id/id_txt_reenviar_contato4"
            android:layout_height="wrap_content">
        </Button>
    </RelativeLayout>
</LinearLayout>