<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
            android:id="@+id/icone_seta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="24dp"
            android:src="@drawable/icone_seta"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Senha"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/icone_seta"
            app:layout_constraintStart_toEndOf="@+id/icone_seta"/>

    <TextView
            android:id="@+id/tv_insira_senha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Insira sua senha de acesso"
            android:layout_marginTop="70dp"
            android:textColor="@color/black"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:textSize="32sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView12"/>

    <EditText
            android:id="@+id/txt_senhaAtual"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="40dp"
            android:paddingLeft="8dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/edit_text_border"
            android:hint="Senha atual"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_insira_senha"/>

    <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:text="Esqueci minha senha"
            app:layout_constraintStart_toStartOf="@+id/txt_senhaAtual"
            app:layout_constraintTop_toBottomOf="@+id/txt_senhaAtual"/>

    <EditText
            android:id="@+id/txt_novaSenha"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/edit_text_border"
            android:hint="Nova senha"
            app:layout_constraintEnd_toEndOf="parent"
            android:paddingLeft="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_senhaAtual"/>

    <EditText
            android:id="@+id/txt_novaSenhaConfirma"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/edit_text_border"
            android:hint="Confirmar nova senha"
            android:paddingLeft="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_novaSenha"/>



    <Button
            android:id="@+id/btn_continuar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:backgroundTint="#8D0000"
            android:text="Continuar"
            app:layout_constraintStart_toStartOf="@+id/txt_novaSenhaConfirma"
            app:layout_constraintTop_toBottomOf="@+id/txt_novaSenhaConfirma"/>


</androidx.constraintlayout.widget.ConstraintLayout>