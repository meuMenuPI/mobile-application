<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:backgroundTint="@color/cor_fundo_padrao"
    android:orientation="vertical"
    tools:context=".EmailContato">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="80dp">

        <!--Início Divisão seta X 'Cadastro'-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="40dp"
                android:layout_marginLeft="8dp"
                android:src="@drawable/seta_preta_voltar"
                android:id="@+id/id_seta_left2_contato3"
                android:layout_height="match_parent">
            </ImageView>

            <TextView
                android:layout_width="match_parent"
                android:layout_toEndOf="@id/id_seta_left2_contato3"
                android:text="Contato"
                android:textSize="30dp"
                android:textColor="@color/black"
                android:textFontWeight="500"
                android:layout_marginLeft="10dp"
                android:fontFamily="sans-serif"
                android:gravity="center_vertical"
                android:layout_height="match_parent">
            </TextView>

        </RelativeLayout>
        <!--Fim Divisão seta X 'Cadastro'-->
    </LinearLayout>
    <!--Fim header 'Cadastro'-->

    <RelativeLayout
        android:layout_width="385dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="match_parent">

        <!--        <EditText-->
        <!--                android:layout_width="match_parent"-->
        <!--                android:id="@+id/id_input_senha_confirmada"-->
        <!--                android:layout_below="@id/id_input_senha"-->
        <!--                android:text="Confirmar nova senha"-->
        <!--                android:paddingLeft="10dp"-->
        <!--                android:layout_marginTop="25dp"-->
        <!--                android:textAlignment="textStart"-->
        <!--                android:background="@drawable/edit_text_border"-->
        <!--                android:layout_height="50dp">-->
        <!--        </EditText>-->

        <TextView
            android:id="@+id/id_txt_sms_contato3"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"

            android:text="Informações de contato:"
            android:textColor="@color/black"
            android:textSize="22dp"></TextView>

        <TextView
            android:id="@+id/id_sobre_sms_contato3"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/id_txt_sms_contato3"
            android:layout_marginTop="58dp"
            android:text="Se você esquecer sua senha será possível recuperar o acesso pelo celular e e-mail, mantenha atualizado."
            android:textColor="@color/black"
            android:textFontWeight="500"
            android:textSize="14dp"></TextView>

        <EditText
            android:id="@+id/id_input_email_contato3"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/id_sobre_sms_contato3"
            android:layout_marginTop="64dp"
            android:background="@drawable/edit_text_border"
            android:paddingLeft="10dp"
            android:hint="E-mail"
            android:textAlignment="textStart"></EditText>

        <Button
            android:id="@+id/id_button_email"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/id_input_email_contato3"
            android:layout_marginTop="31dp"
            android:background="@drawable/custom_button_background"
            android:backgroundTint="#8D0000"
            android:fontFamily="sans-serif"
            android:text="Continuar"></Button>
    </RelativeLayout>
</LinearLayout>